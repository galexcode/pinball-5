<%
	header = if requested_profile.location.kind_of?(Location::Airport)
		"There is nobody else in #{requested_profile.location} airport"
	else
		"There is nobody near #{requested_profile.location}"
	end
	title(header)
%>
<h1><%= yield :title -%> (<%= link_to 'Change Location', edit_location_path -%>)</h1>
