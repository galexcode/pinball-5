<% form_for :user, :url => { :action => 'password_signup' }, :method => :post do |f| %>

	<%= f.text_field :login, :class => 'text focus', :label => '<em>Login</em>: ' %>
	<%= f.text_field :email, :class => 'text', :label => '<em>Email</em>: ' %>
	<%= f.password_field :password, :value => '', :class => 'password', :label => '<em>Password</em>: ' %>
	<%= f.password_field :password_confirmation, :value => '', :class => 'password', :label => '<em>Password</em> Confirmation: ' %>
	<%= f.check_box :terms_of_service, {:label => 'Accept the <em>Terms of Service</em>? ', :checked => false, :class => 'checkbox'}, '1', '0' %>
	
	<%= submit_tag 'Sign up', :class => 'submit', :class => 'button' %>
<% end %>